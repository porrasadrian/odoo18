<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_form_inherit_factura" model="ir.ui.view">
        <field name="name">account.move.line.form.factura</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_id']" position="after">
                <field name="related_invoice_ids" widget="many2many_tags" string="Facturas relacionadas" invisible="1"/>
                <field name="related_invoice_names" readonly="1" string="Facturas relacionadas"/>
            </xpath>
        </field>
    </record>


    <record id="view_move_line_tree_inherit_invoice" model="ir.ui.view">
        <field name="name">account.move.line.tree.invoice</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="credit" position="after">
                <field name="related_invoice_ids" widget="many2many_tags" string="Facturas relacionadas" invisible="1"/>
                <field name="related_invoice_names" readonly="1" string="Facturas relacionadas"/>

            </field>
        </field>
    </record>
</odoo>
